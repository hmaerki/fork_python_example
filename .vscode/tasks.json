    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build dynamic_buffer_main",
            "type": "shell",
            "command": "/usr/bin/g++-14",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "src/dynamic_buffer_main.cpp",
                "src/dynamic_buffer.cpp",
                "-o",
                "bin/dynamic_buffer_main"
